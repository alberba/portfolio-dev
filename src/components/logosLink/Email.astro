---
const { classList, altText } = Astro.props;

const email = "albertsalomv@proton.me";
---

<a href={`mailto:${email}`}>
  <svg
    class={classList}
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    role="img"
    aria-labelledby="emailTitle"
    viewBox="2 4 20 16"
  >
    <title id="emailTitle">{altText}</title>
    <path
      stroke="#fff"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M4 7.00005 10.2 11.65c1.0667.8 2.5333.8 3.6 0L20 7"></path>
    <rect
      width="18"
      height="14"
      x="3"
      y="5"
      stroke="#fff"
      stroke-linecap="round"
      stroke-width="2"
      rx="2"></rect>
  </svg>
</a>
