import TechCard from "./TechCard.astro";

const images = [
  {
    src: "/src/assets/techs/astro-icon-light.svg",
    alt: "Astro Logo",
  },
  {
    src: "/src/assets/techs/java.svg",
    alt: "Java Logo",
  },
  {
    src: "/src/assets/techs/python.svg",
    alt: "Python Logo",
  },
  {
    src: "/src/assets/techs/javascript.svg",
    alt: "JavaScript Logo",
  },
  {
    src: "/src/assets/techs/typescript.svg",
    alt: "TypeScript Logo",
  },
  {
    src: "/src/assets/techs/vue.svg",
    alt: "Vue Logo",
  },
  {
    src: "/src/assets/techs/tailwind.svg",
