<section class="mb-12 flex flex-col gap-6">
  <h3 class="title-section">Stack</h3>
  <div class="mx-auto flex flex-wrap justify-center gap-4">
    {images.map((image) => <TechCard image={image.src} alt={image.alt} />)}
  </div>
</section>
