---
import type { projectInfo } from "../types/types.ts";

const { t } = Astro.props;
const projects: projectInfo[] = Object.values(t.projectsInfo);
---

<section id="projects-section" class="flex flex-col gap-6">
  <h3 class="title-section">{t.title}</h3>
  <ul class="flex flex-wrap justify-center gap-8">
    {
      projects.map((project) => {
        return (
          <li class="border-card-border bg-card-background w-sm overflow-hidden rounded-2xl border sm:w-3/7">
            <a href={project.url} target="_blank" class="flex flex-col">
              <img
                class="h-42 object-cover object-top"
                src={project.imageUrl}
                alt={project.title}
              />
              <div class="flex flex-col gap-2 px-6 py-4">
                <header>
                  <h4 class="text-text-primary text-xl font-semibold">
                    {project.title}
                  </h4>
                </header>
                <p>{project.description}</p>
              </div>
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
